{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid" id="login">
        <div class="form-row flex-column justify-content-center">
            <div class="col-md-6 offset-md-3">
                <div class="card card-outline-secondary">
                    <div class="card-header">
                        <h3 class="mb-0">Login</h3>
                    </div>
                    <div class="card-body">
                        <form class="form" role="form" autocomplete="off" id="loginForm"  method="POST" action="{{ path('store_login') }}">
                            <div class="form-group">
                                <label for="name">Username</label>
                                <input type="text" class="form-control" name="name" id="name" required placeholder="iphonedroid">
                                <span> User : iphonedroid</span>
                                {% if (errors)  %}
                                    <div class="text-danger">Incorrect name</div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password" required autocomplete="new-password" placeholder="iphonedroid">
                                <div class="invalid-feedback">Please enter a password</div>
                                <span> Password : iphonedroid</span>
                                {% if (errors)  %}
                                    <div class="text-danger">Incorrect email</div>
                                {% endif %}
                            </div>

                            <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Login</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}